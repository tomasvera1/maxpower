                                        <li><a href="/motores">Motores </a></li>
                                        <li><a href="/plc">PLC</a></li>
                                        <li><a href="/variadores">Variadores </a></li>
                                    </ul>
                                </aside>
                               


                                <aside class="l_widgest l_menufacture_widget">
                                    <div class="l_w_title">
                                        <h3>Fabricantes</h3>
                                    </div>
                                  
                                </aside>




                                        <!-- NUEVOS PRODUCTOS -->


                                <aside class="l_widgest l_feature_widget">
                                    <div class="l_w_title">
                                        <h3>Nuevos productos</h3>
                                    </div>
                                    <div class="media">

                                    </div>
                                </aside>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================End Categories Product Area =================-->
         

        <script src="js/products/jquery-3.2.1.min.js"></script>
        <script src="js/products/popper.min.js"></script>
